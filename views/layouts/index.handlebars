    <script>
        const btnMobile = document.getElementById("btn-mobile"); function
            togleMenu(event) {
            if (event.type === "touchstart")
                event.preventDefault(); const nav = document.getElementById("nav");
            nav.classList.toggle("active"); const active =
                nav.classList.contains("active");
            event.currentTarget.setAttribute("aria-expanded", active); if (active) {
                event.currentTarget.setAttribute("aria-label", "Fechar Menu");
            } else {
                event.currentTarget.setAttribute("aria-label", "Abrir Menu");
            }
        }
        btnMobile.addEventListener("click", togleMenu);
        btnMobile.addEventListener("touchstart", togleMenu);
    </script>
